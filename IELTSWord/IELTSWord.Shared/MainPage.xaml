<Page
    x:Class="IELTSWord.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IELTSWord"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Gray" 
    mc:Ignorable="d">

    <Grid Background="Gray" Margin="0 50 0 30">
        <Pivot SelectionChanged="Pivot_Changed">
            <PivotItem Header="Learning">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <ProgressBar Maximum="11" Minimum="0" Value="{x:Bind CurrentWord.Level,Mode=OneWay}"></ProgressBar>

                    <StackPanel HorizontalAlignment="Right" Margin="10" Orientation="Horizontal" Grid.Row="1">
                        <ComboBox x:Name="DicsCombo"></ComboBox>
                        <Button Margin="10 0 0 0" Content="LOAD" Click="Load_Click"></Button>
                    </StackPanel>

                    <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center" Text="{x:Bind CurrentWord.Name,Mode=OneWay}" FontSize="48" ></TextBlock>

                        </StackPanel>
                        <TextBlock HorizontalAlignment="Center" x:Name="ElaborateText" MaxWidth="300" TextWrapping="Wrap" FontSize="26"></TextBlock>
                        <TextBlock HorizontalAlignment="Center" Text="{x:Bind CurrentWord.Order,Mode=OneWay}"></TextBlock>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center" Margin="10" Orientation="Vertical" Grid.Row="3">

                        <Button HorizontalAlignment="Stretch" Margin="10" Width="300" Content="NAIL IT" Click="Complete_Click"></Button>
                        <Button HorizontalAlignment="Stretch" Margin="10" Width="300" Content="GOOD"  x:Name="Yes"  Click="Yes_Click"></Button>
                        <Button HorizontalAlignment="Stretch" Margin="10" Width="300" Content="NOT SURE" x:Name="Blur" Click="Blur_Click"></Button>
                        <Button HorizontalAlignment="Stretch" Margin="10" Width="300" Content="NOPE" x:Name="Nope" Click="No_Click"></Button>
                    </StackPanel>
                </Grid>
            </PivotItem>
            <PivotItem Header="Statistics">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="TotalWords" FontSize="30" HorizontalAlignment="Center" Margin="20"></TextBlock>
                    <ListView Grid.Row="1" x:Name="WordsListView">

                    </ListView>
                </Grid>
            </PivotItem>
            <PivotItem Header="Settings">
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
